{
	"name": "node-postcss-es8-boilerplate",
	"version": "1.0.0",
	"main": "index.js",
	"author": "Mohammed Mulazada <thisismoniac@gmail.com>",
	"scripts": {
		"postinstall": "yarn run build:dir",
		"start": "node app.js",
		"build": "yarn run build:all",
		"dev": "parallelshell \"yarn run watch:all \" \"yarn run copy:all:watch \" \"yarn run build:template \"",
		"build:dir": "mkdirp public ./public/scripts ./public/styles ./public/fonts ./public/images ./src ./src/scripts ./src/styles ./src/fonts ./src/images ./libs/template/ ./libs/template/component ./libs/template/component/{name_cc}",
		"build:template": "parallelshell \" touch ./libs/template/component/{name_cc}/{name_cc}.css \" \" touch ./libs/template/component/{name_cc}/{name_cc}.js \" \" touch ./libs/template/component/{name_cc}/{name_cc}.ejs \"",
		"audit:js": "onchange \"./views/**/*.js\" \"./views/*.js\" -- yarn run eslint:js",
		"audit:css": "onchange \"./views/**/*.css\" -- yarn run eslint:css",
		"eslint:css": "stylelint ./views/**/*.css",
		"eslint:js": "eslint ./views/**/*.js --fix",
		"component": "sg generate component",
		"watch:all": "parallelshell \"yarn run watch:js \" \"yarn run watch:css\" \"yarn run audit:css\" \"yarn run audit:js\" \"yarn run watch:node \"",
		"watch:css": "postcss --config './libs/postcss.dev.js' ./views/*.css  -d ./public/styles/ --verbose -w",
		"watch:js": "watchify ./views/index.js -t babelify -o ./public/scripts/index.js -v --debug",
		"watch:node": "nodemon app.js",
		"build:all": "parallelshell \" yarn run build:css \" \"yarn run build:js\" \"yarn run copy:all\"",
		"build:css": "postcss --config './postcss.config.js' ./views/*.css  -d ./public/styles/ --verbose",
		"build:js": "browserify ./views/index.js -t babelify | uglifyjs -cm -o ./public/scripts/index.js",
		"copy:all:watch": "parallelshell \"yarn run copy:fonts -w\" \"yarn run copy:jsStatic -w\" \"yarn run copy:images -w\" \"yarn run copy:cssStatic -w\"",
		"copy:all": "parallelshell \"yarn run copy:fonts\" \"yarn run copy:jsStatic\" \"yarn run copy:images\" \"yarn run copy:cssStatic\"",
		"copy:fonts": "cpx \"./src/fonts/**\" ./public/fonts",
		"copy:jsStatic": "cpx \"./src/scripts/**.js\" ./public/scripts",
		"copy:images": "cpx \"./src/images/**\" ./public/images",
		"copy:cssStatic": "cpx \"./src/styles/**\" ./public/styles"
	},
	"license": "MIT",
	"dependencies": {
		"body-parser": "^1.18.3",
		"dotenv": "^5.0.1",
		"ejs": "^2.6.1",
		"express": "^4.16.3",
		"mkdirp": "^0.5.1"
	},
	"devDependencies": {
		"autoprefixer": "^8.6.5",
		"babel-core": "^6.26.3",
		"babel-plugin-transform-async-to-generator": "^6.24.1",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-preset-env": "^1.7.0",
		"babelify": "^8.0.0",
		"browser-sync": "^2.24.4",
		"browserify": "^16.2.2",
		"cpx": "^1.5.0",
		"css-mqpacker": "^6.0.2",
		"cssnano": "^3.10.0",
		"eslint": "^5.1.0",
		"nodemon": "^1.17.5",
		"onchange": "^4.0.0",
		"parallelshell": "^3.0.2",
		"postcss-cli": "^5.0.0",
		"postcss-cssnext": "^3.1.0",
		"postcss-custom-media": "^6.0.0",
		"postcss-custom-properties": "^7.0.0",
		"postcss-discard-comments": "^4.0.0",
		"postcss-import": "^11.1.0",
		"postcss-mixins": "^6.2.0",
		"postcss-nested": "^3.0.0",
		"postcss-preset-env": "^5.2.1",
		"rimraf": "^2.6.2",
		"seng-generator": "^0.7.1",
		"stylelint": "^9.3.0",
		"uglify-js": "^3.3.27",
		"watchify": "^3.11.0"
	}
}
